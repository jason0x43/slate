{
  "private": true,
  "name": "slate-packages",
  "scripts": {
    "build": "pnpm build:rollup && pnpm build:next",
    "build:next": "cd ./site && next build && next export",
    "build:rollup": "rollup --config ./config/rollup/rollup.config.js",
    "changesetversion": "pnpm changeset version && pnpm install && git add .",
    "clean": "rimraf './packages/*/{dist,lib,node_modules}' './site/{.next,out}'",
    "fix": "pnpm fix:prettier && pnpm fix:eslint",
    "fix:eslint": "pnpm lint:eslint --fix",
    "fix:prettier": "pnpm lint:prettier --write",
    "lint": "pnpm lint:typescript && pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint \"./{packages,site}/**/*.{js,jsx,ts,tsx}\"",
    "lint:prettier": "prettier --check \"**/*.{css,md,js,jsx,json,ts,tsx}\"",
    "lint:typescript": "tsc --build ./ --force",
    "open": "open http://localhost:3000",
    "prerelease": "NODE_ENV=production pnpm build:rollup && pnpm test && pnpm lint",
    "release:publish:latext": "pnpm publish -r",
    "release:publish:next": "pnpm publish -r --tag next",
    "release:publish:experimental": "pnpm publish --tag experimental",
    "release:latest": "pnpm prerelease && pnpm publish",
    "release:next": "pnpm prerelease && pnpm publish --tag next",
    "release:experimental": "pnpm prerelease && pnpm publish --tag experimental",
    "internal:release:next": "pnpm prerelease && pnpm changeset publish --tag next",
    "serve": "cd ./site && next",
    "start": "npm-run-all --parallel --print-label watch serve",
    "test": "pnpm run test:mocha && pnpm run test:jest",
    "test:custom": "mocha --require ./config/babel/register.cjs ./packages/slate/test/index.js",
    "test:inspect": "pnpm test --inspect-brk",
    "test:integration": "run-p -r serve playwright",
    "test:mocha": "mocha --require ./config/babel/register.cjs ./packages/{slate,slate-history,slate-hyperscript}/test/**/*.{js,ts}",
    "test:jest": "jest --config jest.config.js",
    "watch": "pnpm build:rollup --watch",
    "playwright": "playwright test"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/helper-call-delegate": "^7.7.4",
    "@babel/plugin-external-helpers": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-modules-commonjs": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@babel/runtime": "^7.7.4",
    "@changesets/changelog-github": "^0.3.0",
    "@changesets/cli": "^2.14.1",
    "@emotion/css": "^11.7.1",
    "@octokit/core": "^4.2.0",
    "@playwright/test": "^1.29.1",
    "@types/jest": "27.0.1",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/node": "^16.11.26",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "babel-eslint": "^10.0.3",
    "babel-jest": "27.0.6",
    "babel-plugin-dev-expression": "^0.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "faker": "^4.1.0",
    "image-extensions": "^1.1.0",
    "is-hotkey": "^0.1.6",
    "is-url": "^1.2.2",
    "jest": "27.0.6",
    "lint-staged": ">=10",
    "lodash": "^4.17.4",
    "mocha": "^6.2.0",
    "next": "^12.2.0",
    "npm-run-all": "^4.1.2",
    "playwright": "^1.29.1",
    "prettier": "^1.19.1",
    "prismjs": "^1.29.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-error-boundary": "^1.2.5",
    "react-router-dom": "^5.1.2",
    "react-values": "^0.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.6",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "shell-quote": "^1.7.2",
    "slate": "workspace:*",
    "slate-history": "workspace:*",
    "slate-hyperscript": "workspace:*",
    "slate-react": "workspace:*",
    "simple-git-hooks": ">=2.0.3",
    "source-map-loader": "^4.0.0",
    "ts-jest": "^27.1.3",
    "typescript": "4.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{css,md,js,jsx,json,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@7.29.3",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack"
      ],
      "allowedVersions": {
        "react": "16",
        "react-dom": "16"
      }
    },
    "allowedDeprecatedVersions": {
      "@babel/polyfill": "7.12.1",
      "@evocateur/libnpmaccess": "3.1.2",
      "@evocateur/libnpmpublish": "1.2.2",
      "@evocateur/npm-registry-fetch": "4.0.0",
      "@evocateur/pacote": "9.6.5",
      "babel-eslint": "10.1.0",
      "core-js": "2.6.12",
      "debug": "3.2.6",
      "mkdirp": "0.5.4",
      "node-fetch-npm": "2.0.4",
      "object-keys": "0.2.0",
      "read-package-tree": "5.3.1",
      "rollup-plugin-babel": "4.4.0",
      "rollup-plugin-commonjs": "10.1.0",
      "rollup-plugin-json": "4.0.0",
      "rollup-plugin-node-resolve": "5.2.0",
      "rollup-plugin-replace": "2.2.0",
      "rollup-plugin-terser": "7.0.2",
      "sourcemap-codec": "1.4.8",
      "source-map-resolve": "0.5.3",
      "w3c-hr-time": "*"
    }
  }
}
